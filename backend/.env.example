# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travel-buddy-finder

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# Email Configuration (for future implementation)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Socket Configuration
SOCKET_PING_TIMEOUT=5000
SOCKET_PING_INTERVAL=10000

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# API Keys (for future implementation)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key
CURRENCY_API_KEY=your_currency_api_key

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Cache Configuration (for future implementation)
REDIS_URL=redis://localhost:6379

# Note: This is an example configuration file.
# Create a copy of this file named '.env' and fill in your actual values.
# Never commit the actual .env file to version control.
